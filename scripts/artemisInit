case "$1" in
start)
        /usr/bin/artemis & 2>>/var/log/artemis.err
        ;;
stop)
        pkill -9 "inotify"
	for (( i=0; i < 50; i++ )); do
		if [[ $(pgrep -c clamscan) -eq 0 ]]; then
			break
		else
			sleep 0.1
		fi
	done
	while ps aux | grep -q '/artemis$'; do
		sleep 0.5
	done
	;;
restart)
        $0 stop
        $0 start
        ;;
esac

exit $?
